<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    tools:context=".ProfileFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/childPadding"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginBottom="@dimen/childExtraPadding"
        android:text="PROFILE"/>

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">



    <TextView
        android:id="@+id/txt_FName"
        android:layout_width="match_parent"
        android:padding="@dimen/childExtraPadding"
        android:layout_height="wrap_content"

        android:text="First Name:" />
        <EditText
            android:id="@+id/edt_FName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/childExtraPadding"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txt_LName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/childExtraPadding"

            android:text="Last Name:" />
        <EditText
            android:id="@+id/edt_LName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/childExtraPadding"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/childExtraPadding"

            android:text="@string/email" />
    <EditText
        android:id="@+id/edt_Email"
        android:layout_width="match_parent"
        android:padding="@dimen/childExtraPadding"
        android:background="@drawable/edit_text_border"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/txt_Phone"
            android:layout_width="match_parent"
            android:padding="@dimen/childExtraPadding"
            android:layout_height="wrap_content"

            android:text="Phone:" />

    <EditText
        android:id="@+id/edt_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:padding="@dimen/childExtraPadding"
        android:inputType="phone" />




    <TextView
        android:id="@+id/Profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/childExtraPadding"

        android:text="Profile Picture:" />



    <ImageView
        android:id="@+id/iv_profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/childExtraPadding"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonStyle"
            android:layout_marginTop="@dimen/childExtraPadding"
            android:padding="@dimen/childExtraPadding"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:text="Cancel" />
            <Button
                android:id="@+id/btn_Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ButtonStyle"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/childExtraPadding"
                android:padding="@dimen/childExtraPadding"
                android:layout_gravity="center"
                android:text="Submit" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Change Password"
            android:textColor="@color/colorAccent2"
            android:id="@+id/tv_changePassword" />
    </LinearLayout>
    </ScrollView>


</LinearLayout>